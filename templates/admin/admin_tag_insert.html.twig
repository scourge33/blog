{% extends 'admin/admin_base.html.twig' %}

{% block main %}

    <h2 style="color:#B0413E">Add a new tag</h2>

    <div class="container">
        <div class="row">
            <div class="col-12">

                {{ form_start(tagForm) }}

                <div class="form-group">
                    {{ form_label(tagForm.title) }}
                    {{ form_widget(tagForm.title, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="errors">
                    {{ form_errors(tagForm.title) }}
                </div>

                <div class="form-group">
                    {{ form_label(tagForm.color) }}
                    {{ form_widget(tagForm.color, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_widget(tagForm.submit, {'attr': {'class': 'btn btn-danger'}, 'label': 'Save'}) }}
                </div>

                {{ form_end(tagForm) }}

            </div>
        </div>
    </div>

{% endblock %}


